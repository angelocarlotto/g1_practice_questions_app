//npx prisma generate 

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // provider = "sqlite"
  url      = env("DATABASE_URL")
}

model step {
  id            Int    @id @default(autoincrement())
  subdivisionid Int
  categoryid    Int
  num           Int
  title         String
  shorttitle    String
  titlepart1    String
  titlepart2    String
  description   String
  tests         test[]
}

model test {
  id                Int             @id @default(autoincrement())
  type              Int
  allowedmistakes   Int
  numberofquestions Int
  questionphrase    String
  agetoapply        String
  orderindex        Int
  endorsementcode   String
  stepid            Int
  premiumonly       Int
  fulldescription   String
  cover             String
  step              step            @relation(fields: [stepid], references: [id])
  test_question     test_question[]
  title       String
  shorttitle  String
  description String
}


model test_question {
  t_id     Int
  q_id     Int
  question question? @relation(fields: [q_id], references: [id])
  test     test     @relation(fields: [t_id], references: [id])

  @@id(name: "test_nameI2d", [t_id, q_id])
}

model answer {
  id              Int               @id @default(autoincrement())
  text            String
  orderindex      Int
  question_answer question_answer[]
}

model question {
  id              Int               @id @default(autoincrement())
  description     String
  explanation     String
  hint            String
  imagename       String
  correctanswer   Int
  mediaposition   Int
  question_answer question_answer[]
  test_question   test_question[]
}

model question_answer {
  q_id     Int
  a_id     Int
  answer   answer   @relation(fields: [a_id], references: [id])
  question question @relation(fields: [q_id], references: [id])

  @@id(name: "test_name3Id", [q_id, a_id])
}